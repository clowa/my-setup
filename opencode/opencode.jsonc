{
    "$schema": "https://opencode.ai/config.json",
    "default_agent": "plan",
    // Theme configuration
    "theme": "nord",
    "model": "openai/gpt-5.2",
    "autoupdate": true,
    "mcp": {
        /////////////////////
        // NOTES
        // - docker images have to be pulled manually before first use
        /////////////////////
        // DuckDuckGO MCP server
        // see: https://github.com/nickclyde/duckduckgo-mcp-server
        // see: https://hub.docker.com/r/mcp/duckduckgo
        "duckduckgo": {
            "type": "local",
            "command": [
                "docker",
                "run",
                "-i",
                "--rm",
                "mcp/duckduckgo:latest"
            ],
            "enabled": true
        },
        // terraform MCP server
        // see: https://github.com/hashicorp/terraform-mcp-server
        "terraform_registry": {
            "type": "local",
            "command": [
                "docker",
                "run",
                "-i",
                "--rm",
                "hashicorp/terraform-mcp-server:0.4.0"
            ],
            "enabled": true,
            "environment": {}
        },
        // Azure MCP server
        // see: https://github.com/microsoft/mcp/blob/main/servers/Azure.Mcp.Server/README.md#docker
        "microsoft_azure": {
            "type": "local",
            "command": [
                "docker",
                "run",
                "-i",
                "--rm",
                "mcr.microsoft.com/azure-sdk/azure-mcp:latest"
            ],
            "enabled": true,
            "environment": {
                // "AZURE_TENANT_ID": "<your-tenant-id>",
                // "AZURE_CLIENT_ID": "<your-client-id>",
                // "AZURE_CLIENT_SECRET": "<your-client-secret>",
            }
        },
        // Microsoft Learn
        // see: https://learn.microsoft.com/en-us/training/support/mcp-get-started
        "microsoft_docs": {
            "type": "remote",
            "url": "https://learn.microsoft.com/api/mcp",
            "enabled": true
        },
        // Draw.io aka diagrams.net MCP servers
        // see: https://github.com/jgraph/drawio-mcp
        "drawio_app_server": {
            "type": "remote",
            "url": "https://www.draw.io/mcp",
            "enabled": false
        },
        "drawio_tool_server": {
            "type": "local",
            "command": [
                "docker",
                "run",
                "-i",
                "--rm",
                "node:25-slim",
                "npx",
                "@drawio/mcp"
            ],
            "enabled": false
        },
        // MARP MCP server
        // see: https://github.com/masaki39/marp-mcp
        "marp": {
            "type": "local",
            "command": [
                "docker",
                "run",
                "-i",
                "--rm",
                "node:25-slim",
                "npx",
                "@masaki39/marp-mcp@latest"
            ],
            "enabled": false
        }
    },
    "tools": {
        // disable MCP servers globally and enable per-agent to reduce context size
        "duckduckgo": false,
        "terraform_registry": false,
        "microsoft_azure": false,
        "microsoft_docs": false,
        "drawio_app_server": false,
        "drawio_tool_server": false,
        "marp": false
    }
}
